
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark bg-danger" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light bg-black" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light bg-black" asp-area="" asp-controller="Login" asp-action="SignUp">Sign Up</a>
    </li>
}

